{
  // Disable JavaScript validation for HTML files with Jinja2 templates
  "javascript.validate.enable": false,
  "typescript.validate.enable": false,
  
  // Python settings
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": false,
  "python.linting.flake8Enabled": true,
  
  // File associations
  "files.associations": {
    "*.html": "jinja-html"
  },
  
  // Exclude patterns
  "files.exclude": {
    "**/__pycache__": true,
    "**/*.pyc": true,
    "**/.pytest_cache": true,
    "**/node_modules": true,
    "**/.venv": true
  },
  
  // Auto-save
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 1000,
  
  // Editor
  "editor.formatOnSave": false,
  "editor.tabSize": 4,
  "editor.insertSpaces": true
}
